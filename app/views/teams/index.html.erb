<h1>Listing teams</h1>

<div class="container">
	<div class="row">
      <div class='col-sm-3'>Seed</div>
      <div class='col-sm-3'>Name</div>
      <div class='col-sm-1'></div>
      <div class='col-sm-1'></div>
      <div class='col-sm-1'></div>
    </div>
 
    <% @teams.each do |team| %>
      <div class="row">
		<div class='col-sm-3'><%= team.seed %></div>
		<div class='col-sm-3'><%= team.name %></div>
        <div class='col-sm-1'><%= link_to 'Show', team %></div>
        <div class='col-sm-1'><%= link_to 'Edit', edit_team_path(team) %></div>
        <div class='col-sm-1'><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>

</div>

<br>

<%= link_to 'New Team', new_team_path %>
